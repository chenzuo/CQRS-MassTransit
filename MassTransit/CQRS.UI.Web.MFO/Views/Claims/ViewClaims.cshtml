@model IEnumerable<MHM.WinFlexOne.CQRS.Dtos.ClaimDto>

@{
    ViewBag.Title = "View Your Claims";
}

<h2>View Your Claims</h2>

<p>
    @Html.ActionLink("Submit a Claim", "SubmitClaim")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayName("ServiceDate")
        </th>
        <th>
            @Html.DisplayName("Provider")
        </th>
        <th>
            @Html.DisplayName("Claim Type")
        </th>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th>
            @Html.DisplayName("Source")
        </th>
        <th>
            @Html.DisplayName("Amount")
        </th>
        <th>
            @Html.DisplayName("Paid")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Provider)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClaimType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClaimState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Source)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClaimAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountPaid)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
